body.cluster

  #filter-private-bathroom 
    margin 24px 0  

    .filter-button 
      position relative 
      width 90px 
      margin-top 6px 
      cursor pointer

      &:before
        position absolute
        content " "
        cursor pointer
        border 1px solid #c4c4c4
        border-radius 5px
        background-color #fff
        color #565a5c
        display inline-block
        height 1.3em
        width @height
        right -20px
        top -1.5px
        margin 0
        $transition border-color 0.2s

      &.checked:after
        position absolute
        font-family "icomoon"
        content "\e615"
        $font-size 14
        right -22px
        top -1.5px
        text-align center
        width 1.25em
        color #f56653
